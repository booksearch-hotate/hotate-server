<!DOCTYPE html>
<html>
  <head>
    <%- include('./../../components/head') %>
    <link rel="stylesheet" href="<%= pageData.origin %>/css/login.css" />
  </head>
  <body>
    <%- include('./../../components/header-title', {mes: '情報の変更', logo:'gear'}) %>

    <form method="POST" action="/user/edit" class="px-4">
      <input type="hidden" name="_csrf" value="<%= pageData.csrfToken %>">
      <div class="tree-form-item">
        <label for="email" class="tree-label">メールアドレス</label>
        <input class="tree-input" type="email" id="email" name="email" placeholder="変更後のメールアドレスを入力してください。" required value="<%= pageData.userData.email %>">
      </div>
      
      <div class="tree-form-item">
        <label for="pw" class="tree-label">パスワード</label>
        <input class="tree-input" type="password" id="pw" name="pw" placeholder="変更後のパスワードを入力してください。" required>
      </div>

      <div class="tree-form-item">
        <label for="pw_confirmation" class="tree-label">パスワード（確認）</label>
        <input class="tree-input" type="password" id="pw_confirmation" name="pw_confirmation" placeholder="確認のためもう一度パスワードを入力してください" required>
      </div>

      <div class="tree-form-item">
        <label for="before_pw" class="tree-label">現在のパスワード</label>
        <input class="tree-input" type="password" id="before_pw" name="before_pw" placeholder="現在使用しているパスワードを入力してください。" required>
      </div>

      <div class="text-center">
        <button type="submit" class="tree-button my-0 mx-auto">
          <i class="bi-gear me-2"></i>
          変更
        </button>
      </div>
    </form>
    <%- include('./../../components/state-alert', {pageData}) %>
    <%- include('./../../components/input-js') %>
  </body>
</html>