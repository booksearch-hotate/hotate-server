<!DOCTYPE html>
<html>
  <head>
    <%- include('./../../../components/head') %>
    <link rel="stylesheet" href="<%= pageData.origin %>/css/admin/recommendation/edit.css" />
  </head>
  <body>
    <h3>セクションの追加</h3>

    <form method="post" action="/admin/recommendation/insert">
      <input type="hidden" name="_csrf" value="<%= pageData.csrfToken %>">
      <div class="mb-3">
        <label for="title" class="form-label" required>タイトル</label>
        <input type="text" class="form-control" id="title" name="title" placeholder="タイトルを入力" required>
      </div>

      <div class="mb-3 form-floating">
        <textarea class="form-control" placeholder="内容を追加" id="content" style="height: 200px;" name="content" required></textarea>
        <label for="content">内容</label>
      </div>

      <%- include('./../../../components/admin/recommendation/thumbnail-list', {thumbnailList: pageData.anyData.thumbnailList, defaults: pageData.anyData.defaultThumbnailList}) %>

      <div class="mb-3">
        <button type="button" onclick="submit();" class="btn btn-primary">追加</button>
      </div>
    </form>

    <div class="text-center">
      <a href="/admin/recommendation">戻る</a>
    </div>

    <%- include('./../../../components/state-alert', {pageData}) %>

    <%- include('./../../../components/input-js') %>
    <script src="/js/sendThumbnailFile.js"></script>
  </body>
</html>