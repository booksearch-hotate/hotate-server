<%
let mes = '';
let type = '';

switch (pageData.anyData.stateValue) {
  case 'error':
    mes = 'ログイン中にエラーが発生しました。詳しくはログをご覧ください。';
    type = 'danger';
    break;
  case 'invalidToken':
    mes = 'セッションが切れました。再度ログインしてください。';
    type = 'warning';
    break;
  case 'miss':
    mes = 'ログインに失敗しました。';
    type = 'warning';
    break;
}
%>
<!DOCTYPE html>
<html>
  <head>
    <%- include('./../components/head') %>
    <link rel="stylesheet" href="<%= pageData.origin %>/css/login.css" />
  </head>
  <body>
    <%- include('./../components/navbar') %>
    <h1 class="text-center">ログイン</h1>
    <form method="POST" action="/check" class="px-4">
      <input type="hidden" name="_csrf" value="<%= pageData.csrfToken %>">
      <div class="mb-3">
        <label for="input_id" class="form-label">ユーザ名</label>
        <input type="text" class="form-control" id="input_id" name="id" placeholder="ユーザ名" required>
      </div>
      <div class="mb-3">
        <label for="input_pw" class="form-label">パスワード</label>
        <input type="password" class="form-control" id="input_pw" name="pw" placeholder="パスワード" required>
      </div>
      <div class="mb-3 text-center">
        <button type="submit" class="btn btn-primary">ログイン</button>
      </div>
    </form>
    <% if (mes.length) { %>
      <%- include('./../components/stateToast', {mes: mes, type: type}) %>
    <% } %>
    <%- include('./../components/inputJs') %>
  </body>
</html>