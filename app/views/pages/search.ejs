<%
var queryLink = '';

if (pageData.anyData.isStrict) queryLink += '&strict=true';
if (pageData.anyData.isTag) queryLink += '&tag=true';
%>
<!DOCTYPE html>
<html>
  <head>
    <%- include('./../components/head') %>
  </head>
  <body>
    <%- include('./../components/navbar') %>
    <main>
      <h1 class="text-center mt-3">検索結果</h1>
      <h4 class="text-center" style="color: #555">『<%= pageData.anyData.searchWord %>』</h4>
      <% if (pageData.anyData.searchRes.length === 0) { %>
        <div class="text-center">
          <h3 class="text-danger">検索結果が見つかりませんでした</h3>
          <img src="img/ghost.png" alt="ghost" class="img-fluid">
        </div>
      <% } %>
      <% if (pageData.anyData.searchHis.length !== 0) { %>
        <h4 class="mx-2">他の人はこんな検索をしていました</h4>
        <div class="search-history-tag-box px-2">
        <% pageData.anyData.searchHis.forEach(data => { %>
          <a href="/search?search=<%= data.Words %>" class="search-history-tag px-3 py-1">
            <%= data.Words %>
          </a>
        <% }) %>
        </div>
      <% } %>
      <div class="container">
        <div class="row row-cols-3">
          <% for (data of pageData.anyData.searchRes) { %>
            <div class="col my-3">
              <div class="card" style="width: 100%; height: 100%;">
                <div class="row g-0">
                  <div class="col-md-4">
                    <img src="<%= data.ImgLink %>" class="img-fluid rounded-start" data-isbn="<%= data.Isbn %>">
                  </div>
                  <div class="col-md-8">
                    <div class="card-body">
                      <h5 class="card-title"><%= data.BookName %></h5>
                      <h6 class="card-subtitle mb-2 text-muted"><%= data.AuthorName %> ・ <%= data.publisherName%></h6>
                      <p class="card-text"><%= data.BookContent %></p>
                      <% data.Tags.forEach(tag => { %>
                        <%- include('../components/bookTag', {tag: tag}) %>
                      <% }) %>
                      <div class="mt-2">
                        <a href="/item/<%= data.id %>">
                          <span class="mx-3"><%- include('./../icons/book') %></span>詳細
                        </a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% } %>
        </div>
      </div>
      <%- include('../components/navigation', {paginationData: pageData.anyData.paginationData, url: `/search?search=${pageData.anyData.searchWord}${queryLink}&`}) %>
    </main>
    <%- include('./../components/inputJs') %>
    <script src="<%= pageData.origin %>/js/getImgLinks.js"></script>
  </body>
</html>