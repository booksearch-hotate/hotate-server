{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "google"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "ignorePatterns":[
        "build.js",
        "public/js/*"
    ],
    "rules": {
        "valid-jsdoc": "off",
        "require-jsdoc": "off",
        "max-len": "off",
        "no-template-curly-in-string": "error",
        "prefer-template": "error",
        "quotes": [2, "single", { "avoidEscape": true }]
    }
}
